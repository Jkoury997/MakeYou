<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../../partials/head") %>
    <title>Incio de sesion</title>
</head>
<body>
    <header>
    </header>
    <main>
      <section class="d-flex justify-content-center align-items-center" style="height: 100vh;">
          <div class="container">
              <div class="row justify-content-center">
                  <div class="col-md-6">
                      <div class="card">
                        <div class="text-center mt-3 mb-3">
                          <!-- AquÃ­ insertamos el logo -->
                          <img src="../images/logo-Marcela-Koury.svg" alt="Logo" class="rounded-circle" style="width: 100px; height: 100px;"> 
                        </div>
                          <div class="card-body">
                              <form action="/auth/businessSelect" method="post">
                                <h3 class="text-center">Bienvenido <%= user %></h3>
                                <% business.forEach((busines) => { %>
                                  <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-primary btn-pink mt-4 p-2" name="id" value="<%= busines.Codigo %>"><%= busines.Nombre %></button>
                                  </div>
                                <%}); %>
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </section>
    </main>
  </body>
</html>