<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <title>Dashboard</title>
    </head>

    <body>
        <%- include("../partials/sidebar") %>
      <main class="container-fluid">
        <div id="mainContent">
          <section>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
              <a href="/admin/qr/create" class="btn btn-primary btn-pink">Crear nuevo</a>
            </div>
          </section>
          <h3>Lista</h3>
          <section class="mt-3">
            <div class="shadow-none p-3 mb-4 bg-body-tertiary rounded">
              <div class="row align-items-center">
                <div class="col-1">
                  #
                </div>
                <div class="col-2">
                  Tipo
                </div>
                <div class="col-3">
                  Nombre
                </div>
                <div class="col-2">
                  Link
                </div>
                <div class="col-1">
                  Qr
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end col-3">
                  Opciones
                </div>
              </div>
            </div>
          </section>
          <section class="mt-3">
            <% qrCodes.forEach((qrCode,index) => { %>
            <div class="shadow-none p-3 mb-3 bg-body-tertiary rounded">
              
              <div class="row align-items-center">
                <div class="col-1">
                  <span><%= index + 1 %></span>
                </div>
                <div class="col-2">
                  <span><%= qrCode.typeQr %></span>
                </div>
                <div class="col-3">
                  <span><%= qrCode.name+" "+ qrCode.lastname%></span>
                </div>
                <div class="col-2">
                  <a href="/showQR/<%= qrCode.uuid %>"><i class="bi bi-person-vcard"></i></a>
                </div>
                <div class="col-1">
                  <a href="/downloadQR/<%= qrCode.uuid %>"><i class="bi bi-download"></i></a>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end col-3">
                  <form action="/delete/<%= qrCode.uuid%>" method="post">
                      <button class="btn btn-danger" type="submit"><i class="bi bi-trash"></i></button>
                  </form>
                  <!-- El inicio del formulario de editar debe estar aquÃ­ -->
                  <form action="/admin/qr/edit/<%= qrCode.uuid%>" method="get">
                      <button class="btn btn-secondary" type="submit"><i class="bi bi-pencil-square"></i></button>
                  </form>
              </div>
              
              </div>
            </div>
            <% }); %>
          </section>
        </div>
    </main>

</body>
</html>