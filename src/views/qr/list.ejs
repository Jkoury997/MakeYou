<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../partials/head") %>
        <title>Dashboard</title>
    </head>

    <body>
        <%- include("../partials/sidebar") %>
      <main class="container-fluid">
        <div id="mainContent">
          <section>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
              <a href="/admin/qr/create" class="btn btn-primary btn-pink">Crear nuevo</a>
            </div>
          </section>
          <h3>Lista</h3>
          <section class="mt-3">
            <div class="shadow-none p-3 mb-4 bg-body-tertiary rounded">
              <div class="row align-items-center">
                <div class="col-1">
                  #
                </div>
                <div class="col">
                  Tipo
                </div>
                <div class="col">
                  Nombre
                </div>
                <div class="col">
                  Link
                </div>
                <div class="col">
                  Qr
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end col">
                </div>
              </div>
            </div>
          </section>
          <section class="mt-3">
            <% qrCodes.forEach((qrCode,index) => { %>
            <div class="shadow-none p-3 mb-3 bg-body-tertiary rounded">
              
              <div class="row align-items-center">
                <div class="col-1">
                  <span><%= index + 1 %></span>
                </div>
                <div class="col">
                  <span><%= qrCode.typeQr %></span>
                </div>
                <div class="col">
                  <span><%= qrCode.name+" "+ qrCode.lastname%></span>
                </div>
                <div class="col">
                  <a href="/showQR/<%= qrCode.uuid %>">Ver tarjeta de contacto</a>
                </div>
                <div class="col">
                  <a href="/downloadQR/<%= qrCode.uuid %>">Ver tarjeta de contacto</a>
                </div>
                <div class="d-grid gap-2 d-md-flex justify-content-md-end col">
                    <button class="btn btn-danger" type="button">Eliminar</button>
                    <button class="btn btn-secondary" type="button">Editar</button>
                </div>
              </div>
            </div>
            <% }); %>
          </section>
        </div>
    </main>

</body>
</html>